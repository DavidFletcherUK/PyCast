<h1>Contacts</h1>
<%= link_to 'Add New Contact', new_person_path %>
 
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Other</th>
    <th colspan="2"></th>
  </tr>
 
  <% @contacts.each do |contact| %>
    
    <tr>
      <td><%= contact.FirstName %></td>
      <td><%= contact.LastName %></td>
      <td><%= contact.Email %></td>
      <td><%= contact.Phone %></td>
      <td><%= contact.Other %></td>
      <td><%= link_to 'Show', person_path(contact) %></td>
      <td><%= link_to 'Edit', edit_person_path(contact) %>
      <td><%= link_to 'Destroy', person_path(contact),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
